<section class="hero-bleed text-white d-flex align-items-center justify-content-center text-center">
  <div class="hero-inner">
    <h1 class="display-4 fw-bold mb-4">American Congress Digital Archives Portal</h1>
    <%= link_to 'Search', search_action_path, class: 'btn btn-outline-light btn-lg px-4 py-2' %>
  </div>
</section>

<div class="carousel-wrap my-5">
  <div id="featuredCarousel" class="carousel slide" data-bs-ride="false" aria-label="Featured Collections">
    <div class="carousel-inner" role="listbox">
      <div class="carousel-item active">
        <div class="col-md-4">
          <%= link_to search_action_path, class: "card carousel-card d-block text-reset text-decoration-none shadow-sm" do %>
            <%= image_tag 'carousel/slide1.jpg', class: 'card-img-top', alt: 'Featured Collection 1' %>
            <div class="card-body">
              <h3 class="card-title">Lorem Ipsum Subheading Content</h3>
              <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing</p>
            </div>
          <% end %>
        </div>
      </div>

      <div class="carousel-item">
        <div class="col-md-4">
          <%= link_to search_action_path(sort: 'timestamp desc'), class: "card carousel-card d-block text-reset text-decoration-none shadow-sm" do %>
            <%= image_tag 'carousel/slide2.jpg', class: 'card-img-top', alt: 'Featured Collection 2' %>
            <div class="card-body">
              <h3 class="card-title">Lorem Ipsum Partner Content</h3>
              <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing</p>
            </div>
          <% end %>
        </div>
      </div>

      <div class="carousel-item">
        <div class="col-md-4">
          <%= link_to '/research-support', class: "card carousel-card d-block text-reset text-decoration-none shadow-sm" do %>
            <%= image_tag 'carousel/slide3.jpg', class: 'card-img-top', alt: 'Featured Collection 3' %>
            <div class="card-body">
              <h3 class="card-title">Lorem Ipsum Subheading Content</h3>
              <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#featuredCarousel" data-bs-slide="prev" aria-label="Previous">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#featuredCarousel" data-bs-slide="next" aria-label="Next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </button>
  </div>
</div>

<section class="content-grid my-5" aria-labelledby="curated-content-heading">
  <h2 id="curated-content-heading" class="visually-hidden">Curated Content</h2>

  <div class="container-fluid px-3">
    <div class="row g-4">
      
      <!-- Large Feature Card - Books with Text Overlay -->
      <div class="col-12 col-lg-6">
        <%= link_to '/collections', class: "card feature-card h-100 d-block text-reset text-decoration-none shadow-sm" do %>
          <%= image_tag 'cards/books-shelf.jpg', class: "card-img", alt: "" %>
          <div class="card-img-overlay d-flex flex-column justify-content-end">
            <div class="feature-card-content">
              <h3 class="h2 fw-bold mb-3">Curated Content</h3>
              <p class="mb-3">The American Congress Digital Archives Portal is a collaborative non-partisan project that makes congressional archives available online, bringing the history of the People's Branch to the people.</p>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Dark Card with Button - Senator Inouye -->
      <div class="col-12 col-lg-6">
        <%= link_to '/collections/inouye-keynote', class: "card dark-card h-100 d-block text-white text-decoration-none shadow-sm" do %>
          <div class="card-body d-flex flex-column justify-content-center text-center p-4 p-md-5">
            <h3 class="display-6 fw-bold mb-4">Senator Daniel K. Inouye's keynote address</h3>
            <p class="mb-4">First page of Senator Inouye's keynote address at the 1968 Democratic National Convention in Chicago. The speech addressed civil unrest, the Vietnam War, and the assassinations of Martin Luther King Jr. and Robert F. Kennedy, and it brought Senator Inouye into the national spotlight.</p>
            <div>
              <%= link_to 'View Collection', '/collections/inouye-keynote', class: 'btn btn-danger btn-lg px-4' %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Split Card - Manuscript + Text -->
      <div class="col-12">
        <%= link_to '/about', class: "card split-card d-block text-reset text-decoration-none shadow-sm" do %>
          <div class="row g-0">
            <div class="col-md-6">
              <%= image_tag 'cards/manuscript.jpg', class: "split-card-img", alt: "" %>
            </div>
