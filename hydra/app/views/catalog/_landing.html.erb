  <div class="container-fluid px-3">
    <div class="row g-4">
      
      <!-- Standard Card-->
      <div class="col-12 col-lg-6">
        <%= link_to '/collections', class: "card standard-card h-100 d-block text-reset text-decoration-none shadow-sm" do %>
          <%= image_tag 'cards/card3.jpg', class: "card-img-top", alt: "" %>
          <div class="card-body">
            <h3 class="h4 fw-bold mb-3">Curated Content</h3>
            <p class="mb-0">The American Congress Digital Archives Portal is a collaborative non-partisan project that makes congressional archives available online, bringing the history of the People's Branch to the people.</p>
          </div>
        <% end %>
      </div>

      <!-- Image Overlay Card with Button-->
      <div class="col-12 col-lg-6">
        <div class="card overlay-card h-100 shadow-sm">
          <%= link_to '/collections/inouye-keynote', class: "overlay-card-link d-block text-decoration-none" do %>
            <div class="overlay-card-inner">
              <%= image_tag 'cards/card4.jpg', class: "overlay-card-img", alt: "" %>
              <div class="overlay-card-content">
