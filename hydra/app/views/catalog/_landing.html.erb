<section class="hero-bleed text-white d-flex align-items-center justify-content-center text-center">
  <div class="hero-inner">
    <h1 class="display-4 fw-bold mb-4">American Congress Digital Archives Portal</h1>
    <%= link_to 'Search', search_action_path, class: 'btn btn-outline-light btn-lg px-4 py-2' %>
  </div>
</section>

<div class="carousel-wrap my-5">
  <div id="featuredCarousel" class="carousel slide" data-bs-ride="false" aria-label="Featured">
    <div class="carousel-inner" role="listbox">
      <div class="carousel-item active">
        <div class="col-md-4">
          <%= link_to search_action_path, class: "card d-block text-reset text-decoration-none shadow-sm" do %>
            <%= image_tag 'carousel/slide1.jpg', class: 'card-img-top', alt: 'Featured 1' %>
            <div class="card-body">
              <h3 class="h6 mb-1">Lorem Ipsum Subheading Content</h3>
              <p class="mb-0 small text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing</p>
            </div>
          <% end %>
        </div>
      </div>

      <div class="carousel-item">
        <div class="col-md-4">
          <%= link_to search_action_path(sort: 'timestamp desc'), class: "card d-block text-reset text-decoration-none shadow-sm" do %>
            <%= image_tag 'carousel/slide2.jpg', class: 'card-img-top', alt: 'Featured 2' %>
            <div class="card-body">
              <h3 class="h6 mb-1">Lorem Ipsum Partner Content</h3>
              <p class="mb-0 small text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing</p>
            </div>
          <% end %>
        </div>
      </div>

      <div class="carousel-item">
        <div class="col-md-4">
          <%= link_to '/research-support', class: "card d-block text-reset text-decoration-none shadow-sm" do %>
            <%= image_tag 'carousel/slide3.jpg', class: 'card-img-top', alt: 'Featured 3' %>
            <div class="card-body">
              <h3 class="h6 mb-1">Lorem Ipsum Subheading Content</h3>
              <p class="mb-0 small text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#featuredCarousel" data-bs-slide="prev" aria-label="Previous">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#featuredCarousel" data-bs-slide="next" aria-label="Next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </button>
  </div>
</div>

<section class="cards-2x3 my-5" aria-labelledby="quick-links-heading">
  <h2 id="quick-links-heading" class="visually-hidden">Curated Content</h2>

  <!-- 2 columns on md+ (forces 2Ã—3); 1 column on xs -->
  <div class="row row-cols-1 row-cols-md-2 g-4">
    <% [
      {title: "Curated Content", body: "Lorem ipsum dolor sit amet, consectetur adipiscing elit ...", href: "/about", image: "cards/card3.jpg"},
      {title: "Curated Content", body: "Lorem ipsum dolor sit amet, consectetur adipiscing elit ...", href: "/about", image: "cards/card4.jpg"},
      {title: "Curated Content", body: "Lorem ipsum dolor sit amet, consectetur adipiscing elit ...", href: "/about", image: "cards/card4.jpg"},
      {title: "Curated Content", body: "Lorem ipsum dolor sit amet, consectetur adipiscing elit ...", href: "/about", image: "cards/card3.jpg"},
      {title: "Curated Content", body: "Lorem ipsum dolor sit amet, consectetur adipiscing elit ...", href: "/about", image: "cards/card3.jpg"},
      {title: "Curated Content", body: "Lorem ipsum dolor sit amet, consectetur adipiscing elit ...", href: "/about", image: "cards/card4.jpg"}
    ].each do |c| %>
      <div class="col">
        <%= link_to c[:href], class: "card link-card h-100 d-block text-reset text-decoration-none shadow-sm" do %>
          <% if c[:image].present? %>
            <%= image_tag c[:image], class: "card-img-top", alt: "" %>
          <% end %>
          <div class="card-body">
            <h3 class="h4 fw-semibold mb-2"><%= c[:title] %></h3>
            <p class="mb-0 text-body-secondary"><%= c[:body] %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
