<%# Ruby Page Variables %>
<% identifier = @document[:id] %>
<% project = @document[:project_ssi] %>
<% num_files = @document[:num_files_isi] %>
<% description = @document[:description_tesim] %>
<% audio_url = @document[:available_by_tesim]&.first %>

<div class="row">
  <div class="col-xs-12">      
      <a class="document-image-full" href="/audio/<%="#{identifier}"%>">
        <!-- use available_by (mp3) for audio playback -->
        <% if audio_url.present? %>
          <%= audio_tag(audio_url, autoplay: false, controls: true) %> <br><br> 
        <% else %>
          <%= audio_tag("/audio/#{identifier}", autoplay: false, controls: true) %> <br><br> 
        <% end %>
      </a>
  </div>
  <div class="col-md-8">
    <div id="document" class="document <%= render_document_class %>" itemscope  itemtype="<%= @document.itemtype %>">
      <div id="doc_<%= @document.id.to_s.parameterize %>">
        <% # bookmark/folder functions -%>
        <%= render_document_partials @document, (defined?(blacklight_config) && blacklight_config ? blacklight_config.view_config(:show).partials : []) %>
      </div>
    </div>
  </div>
</div>
<br><br>
